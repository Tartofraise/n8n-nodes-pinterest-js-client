{
  "name": "n8n-nodes-pinterest-js-client",
  "version": "1.0.16",
  "description": "n8n node for Pinterest automation using pinterest-js-client with stealth features",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "pinterest",
    "automation",
    "social-media"
  ],
  "license": "MIT",
  "homepage": "https://github.com/Tartofraise/n8n-nodes-pinterest-js-client",
  "author": {
    "name": "Tartofraise"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tartofraise/n8n-nodes-pinterest-js-client.git"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "n8n-node build",
    "build:watch": "tsc --watch",
    "dev": "n8n-node dev",
    "lint": "n8n-node lint",
    "lint:fix": "n8n-node lint --fix",
    "release": "n8n-node release",
    "prepublishOnly": "n8n-node prerelease",
    "postinstall": "npx --yes playwright install"
  },
  "files": [
    "dist",
    "nodes",
    "credentials",
    "README.md",
    "LICENSE"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/PinterestApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Pinterest/Pinterest.node.js"
    ]
  },
  "devDependencies": {
    "@n8n/node-cli": "*",
    "@types/better-sqlite3": "^7.6.12",
    "eslint": "9.32.0",
    "prettier": "3.6.2",
    "release-it": "^19.0.4",
    "typescript": "5.9.2"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  },
  "dependencies": {
    "pinterest-js-client": "^1.0.1",
    "better-sqlite3": "^11.0.0"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}
