{
  "name": "n8n-nodes-pinterest-js-client",
  "version": "1.0.0",
  "description": "n8n node for Pinterest automation using pinterest-js-client with stealth features",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "pinterest",
    "automation",
    "social-media"
  ],
  "license": "MIT",
  "homepage": "https://github.com/Tartofraise/n8n-nodes-pinterest-js-client",
  "author": {
    "name": "Tartofraise",
    "email": "your-email@example.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tartofraise/n8n-nodes-pinterest-js-client.git"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "prepublishOnly": "npm run build && npm run lint -c .eslintrc.prepublish.js nodes credentials package.json"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/PinterestApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Pinterest/Pinterest.node.js"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.1",
    "gulp": "^4.0.2",
    "n8n-workflow": "^1.19.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  },
  "dependencies": {
    "pinterest-js-client": "^1.0.0"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}


